---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

</div>
<!doctype html>
<html lang="{{ site.lang }}">
  <!-- Head -->
  <head>
    <!-- Add this line for the slot machine CSS -->
    <link rel="stylesheet" href="{{ '/assets/css/slot-machine.css' | relative_url }}">
  </head>

  <!-- Body -->
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
   
    <!-- Add this line for the slot machine JavaScript -->
    <script src="{{ '/assets/js/slot-machine.js' | relative_url }}"></script>


  </body>
</html>